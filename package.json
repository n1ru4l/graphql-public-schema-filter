{
  "name": "@n1ru4l/graphql-public-schema-filter",
  "version": "0.4.0",
  "description": "Filter your GraphQL schema into a public schema.",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "author": {
    "name": "Laurin Quast",
    "email": "laurinquast@googlemail.com",
    "url": "https://github.com/n1ru4l"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint",
      "git add -f"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "2.17.0",
    "@graphql-codegen/testing": "1.17.7",
    "@graphql-tools/schema": "8.2.0",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "bob-the-bundler": "1.5.1",
    "graphql": "15.6.1",
    "husky": "7.0.2",
    "jest": "27.2.3",
    "lint-staged": "11.1.2",
    "patch-package": "6.4.7",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "graphql": "15.x.x"
  },
  "scripts": {
    "postinstall": "patch-package",
    "test": "jest",
    "build": "tsc && bob build --single",
    "ci:eslint": "eslint --ext .ts,.js,.tsx --ignore-path .gitignore .",
    "ci:release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@graphql-tools/utils": "^8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
