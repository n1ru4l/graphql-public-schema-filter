{
  "name": "@n1ru4l/graphql-public-schema-filter",
  "version": "2.0.0",
  "description": "Filter your GraphQL schema into a public schema.",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./*": {
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js"
    }
  },
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "author": {
    "name": "Laurin Quast",
    "email": "laurinquast@googlemail.com",
    "url": "https://github.com/n1ru4l"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint",
      "git add -f"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "2.26.1",
    "@changesets/changelog-github": "0.4.8",
    "@graphql-codegen/testing": "2.0.0",
    "@graphql-codegen/typescript": "3.0.4",
    "@types/jest": "29.5.1",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "bob-the-bundler": "6.0.0",
    "@graphql-tools/schema": "9.0.19",
    "graphql": "16.9.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.3.0",
    "patch-package": "7.0.0",
    "prettier": "2.8.8",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "graphql": "16.x.x"
  },
  "scripts": {
    "postinstall": "patch-package",
    "test": "jest",
    "build": "bob build",
    "ci:eslint": "eslint --ext .ts,.js,.tsx --ignore-path .gitignore .",
    "prerelease": "yarn build",
    "release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@graphql-tools/utils": "^9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
